unit unitLogoMaker;

interface

  procedure GetAndAddLogomarca(Caminho, PrintStrategy: string);


implementation

uses
  Classes, SysUtils;

procedure GetAndAddLogomarca(Caminho, PrintStrategy: string);

var
   LineOfEtiqueta: text;
   BinaryLogomarca: text;
   NewEtiqueta: text;

   CommandLines: array[1..100] of AnsiString;
   AuxCommandline: AnsiString;

   index, num_lines: integer;

begin
  index:= 1;
  num_lines:= 0;

  if (PrintStrategy = 'ONE') then begin
     assign(BinaryLogomarca, Caminho+'ONE_LOGOMARCA.binnary');
  end;

  if (PrintStrategy = 'TWO') then begin
     assign(BinaryLogomarca, Caminho+'TWO_LOGOMARCA.binnary');
  end;

  if (PrintStrategy = 'THREE') then begin
     assign(BinaryLogomarca, Caminho+'THREE_LOGOMARCA.binnary');
  end;

  assign(LineOfEtiqueta, Caminho+'etiqueta.txt');
  assign(NewEtiqueta, Caminho+'etiqueta_new.txt');

  reset(LineOfEtiqueta);

  while(not EOF(LineOfEtiqueta)) do begin
    readln(LineOfEtiqueta, CommandLines[index]);
    index:= index + 1;
    num_lines:= num_lines + 1;
  end;

  close(LineOfEtiqueta);

  reset(BinaryLogomarca);

  while (not EOF(BinaryLogomarca)) do begin
   readln(BinaryLogomarca, CommandLines[index]);
   index:= index + 1;
   num_lines:= num_lines + 1;
  end;

  close(BinaryLogomarca);

  if (PrintStrategy = 'ONE') then begin
     AuxCommandline:= CommandLines[num_lines];
     CommandLines[num_lines]:= CommandLines[num_lines-1];
     CommandLines[num_lines-1]:= AuxCommandLine;
  end;

  if (PrintStrategy = 'TWO') then begin
     AuxCommandline:= CommandLines[num_lines];
     CommandLines[num_lines]:= CommandLines[num_lines-1];
     CommandLines[num_lines-1]:= AuxCommandLine;
  end;

  if (PrintStrategy = 'THREE') then begin
     AuxCommandline:= CommandLines[num_lines];
     CommandLines[num_lines]:= CommandLines[num_lines-3];
     CommandLines[num_lines-3]:= AuxCommandLine;
  end;



  for index:=1 to num_lines do begin
    writeln(CommandLines[index])
  end;

  rewrite(NewEtiqueta);

  for index:=1 to num_lines do begin
    writeln(NewEtiqueta, CommandLines[index]);
  end;

  close(NewEtiqueta);
end;


end.

